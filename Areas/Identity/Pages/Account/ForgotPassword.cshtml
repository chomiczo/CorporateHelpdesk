@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Resetowanie hasła";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-envelope-exclamation display-1 text-warning"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Zapomniałeś hasła?</h3>
                    <p class="text-muted mb-4">Wpisz swój adres email, a wyślemy Ci link do zresetowania hasła.</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 text-start">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Adres Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-dark fw-bold">Wyślij link resetujący</button>
                        </div>
                    </form>

                    <div class="mt-4">
                        <a asp-page="./Login" class="text-decoration-none text-muted small"><i class="bi bi-arrow-left"></i> Wróć do logowania</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}