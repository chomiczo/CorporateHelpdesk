@model CorporateHelpdesk.Models.Ticket

@{
    ViewData["Title"] = "Szczegóły zgłoszenia";
    // Wyciągamy logikę do zmiennej - to zapobiega błędom parsera w blokach if/else
    bool showComments = ViewBag.EnableComments == true;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold">@Model.Title</h1>
        <span class="badge @(Model.Status == "Nowe" ? "bg-primary" : Model.Status == "W toku" ? "bg-warning text-dark" : "bg-secondary") fs-6">
            @Model.Status
        </span>
    </div>
    <hr />

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="card-title text-muted">Opis problemu</h5>
            <p class="card-text fs-5">@Model.Description</p>
            <div class="text-muted small mt-3">
                <i class="bi bi-calendar"></i> Utworzono: @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm");
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin") && Model.Status != "Zamknięte")
    {
        <div class="mb-4">
            <form asp-action="ChangeStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="newStatus" value="Zamknięte" />
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill"></i> Oznacz jako rozwiązane
                </button>
            </form>
        </div>
    }

    <h3 class="mt-5 mb-3"><i class="bi bi-chat-dots"></i> Komentarze</h3>

    @if (showComments)
    {
        <div class="list-group mb-4 shadow-sm">
            @if (Model.Comments != null && Model.Comments.Any())
            {
                @foreach (var comment in Model.Comments.OrderBy(c => c.CreatedAt))
                {
                    <div class="list-group-item border-0 border-bottom p-3">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 fw-bold text-primary">
                                <i class="bi bi-person"></i> @(comment.Author?.UserName ?? "Nieznany")
                            </h6>

                            <small class="text-muted">
                                @(comment.CreatedAt.HasValue ? comment.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                            </small>
                        </div>
                        <p class="mb-1 mt-2">@comment.Text</p>
                    </div>
                }
            }
            else
            {
                <div class="list-group-item text-center text-muted p-4">
                    Brak komentarzy. Bądź pierwszy!
                </div>
            }
        </div>

        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body">
                <h5 class="mb-3">Dodaj komentarz</h5>
                <form asp-action="AddComment" method="post">
                    <input type="hidden" name="ticketId" value="@Model.Id" />
                    <div class="mb-3">
                        <textarea name="commentText" class="form-control" rows="3" placeholder="Napisz coś..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary px-4">Wyślij</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Powrót</a>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning d-flex align-items-center shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
            <div>
                <strong>System komentarzy wyłączony.</strong> Administrator zablokował możliwość dodawania nowych wpisów.
            </div>
        </div>
    }
</div>