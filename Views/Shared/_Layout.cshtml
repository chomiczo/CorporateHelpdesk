@using CorporateHelpdesk.Data
@inject ApplicationDbContext _context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CorporateHelpdesk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CorporateHelpdesk.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scss/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    @{
        // Używam ?. (null-conditional) i ?? (null-coalescing)
        var controller = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
        var action = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
    }
    <div id="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                @{
                    // Pobieramy nazwę z bazy lub używamy domyślnej, jeśli baza jest pusta
                    var orgName = _context.Settings.FirstOrDefault()?.OrganizationName ?? "Corporate Helpdesk";
                }
                <h3>@orgName</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="@(controller == "Home" && action == "Index" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Dashboard</a>
                </li>
                <li class="@(controller == "Tickets" ? "active" : "")">
                    <a asp-controller="Tickets" asp-action="Index"><i class="bi bi-ticket-perforated"></i> Moje Zgłoszenia</a>
                </li>

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li class="mt-4 px-4">
                        <small class="text-uppercase opacity-50 text-white-50" style="font-size: 0.7rem;">Administracja</small>
                    </li>
                    <li class="@(controller == "Users" ? "active" : "")">
                        <a asp-controller="Users" asp-action="Index"><i class="bi bi-people"></i> Użytkownicy </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Settings"><i class="bi bi-gear"></i> Ustawienia</a>
                    </li>
                }
            </ul>

            <div class="w-100 p-3 border-top border-secondary">
                <partial name="_LoginPartial" />
            </div>
        </nav>

        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                title: 'Sukces!',
                // Json.Serialize rozwiązuje problem kodowania znaków i błędów argumentów
                text: @Json.Serialize(TempData["Success"].ToString()),
                icon: 'success',
                confirmButtonColor: '#3498db'
            });
        </script>
    }

</body>
</html>
