<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CorporateHelpdesk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CorporateHelpdesk.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>HelpDesk Pro</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Dashboard</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Tickets" ? "active" : "")">
                    <a asp-controller="Tickets" asp-action="Index"><i class="bi bi-ticket-perforated"></i> Moje Zgłoszenia</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="mt-4 px-4"><small class="text-uppercase opacity-50">Administracja</small></li>
                    <li><a href="#"><i class="bi bi-people"></i> Użytkownicy</a></li>
                    <li><a href="#"><i class="bi bi-gear"></i> Ustawienia Systemu</a></li>
                }
            </ul>

            <div class="position-absolute bottom-0 w-100 p-3 border-top border-secondary">
                <partial name="_LoginPartial" />
            </div>
        </nav>

        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <link rel="stylesheet" href="~/scss/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                title: 'Sukces!',
                text: '@TempData["Success"]',
                icon: 'success',
                confirmButtonColor: '#3498db'
            });
        </script>
    }

</body>
</html>
