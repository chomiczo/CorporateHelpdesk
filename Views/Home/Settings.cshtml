@model CorporateHelpdesk.Models.SystemSettings

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-sliders fs-1 text-primary me-3"></i>
        <h2 class="fw-bold m-0">Ustawienia Systemu</h2>
    </div>

    <form asp-action="SaveSettings" method="post">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white fw-bold">🏠 Konfiguracja Ogólna</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nazwa Organizacji</label>
                            <input asp-for="OrganizationName" class="form-control" placeholder="Np. Moja Firma Sp. z o.o." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Domyślny Priorytet Nowych Zgłoszeń</label>
                            <select asp-for="DefaultPriority" class="form-select">
                                <option value="Niski">Niski</option>
                                <option value="Średni">Średni</option>
                                <option value="Wysoki">Wysoki</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white fw-bold">🛠️ Funkcje i Limity</div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="EnableComments" class="form-check-input" type="checkbox" id="commentsSwitch">
                            <label class="form-check-label fw-bold" for="commentsSwitch">Włącz system komentarzy</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Limit otwartych zgłoszeń na użytkownika</label>
                            <input asp-for="MaxTicketsPerUser" type="number" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 border-top border-primary border-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <span class="text-muted small">Wszystkie zmiany są logowane w dzienniku zdarzeń administratora.</span>
                <button type="submit" class="btn btn-primary px-5 shadow-sm">Zapisz ustawienia</button>
            </div>
        </div>
    </form>
</div>